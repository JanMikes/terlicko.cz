<div data-controller="gallery" class="my-5">
    <div class="row g-3">
        {% for obrazek in data.Obrazek %}
            <div class="col-6 col-md-2 {{ loop.index > data.Pocet_zobrazenych ? 'd-none' }}" data-gallery-target="item">
                <img class="img-fluid" src="{{ obrazek.Obrazek.url }}" alt="{{ obrazek.Popis }}" title="{{ obrazek.Popis }}">
            </div>
        {% endfor %}
    </div>

    {% if data.Obrazek|length > data.Pocet_zobrazenych %}
        <button class="btn btn-primary mt-3" data-gallery-target="button" data-action="click->gallery#showMore">Zobrazit v√≠ce</button>
    {% endif %}
</div>
