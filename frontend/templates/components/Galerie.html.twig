<div data-controller="gallery" class="mt-2 mb-5">
    <div class="gallery-grid">
        {% for obrazek in data.Obrazek %}
            <div class="gallery-item {{ loop.index > data.Pocet_zobrazenych ? 'd-none' }}" data-gallery-target="item">
                {#
                <a href="{{ obrazek.Obrazek.large.url ? obrazek.Obrazek.large.url : obrazek.Obrazek.url }}" class="glightbox">
                    <img class="img-fluid" style="width: 100%;" src="{{ obrazek.Obrazek.thumbnail ? obrazek.Obrazek.thumbnail.url : obrazek.Obrazek.url }}" alt="{{ obrazek.Popis }}" title="{{ obrazek.Popis }}">
                </a>
                #}
                <a href="{{ obrazek.Obrazek.url }}" class="glightbox gallery-link d-block" style="height: 250px; overflow: hidden;">
                    <img class="img-fluid gallery-image" style="width: 100%; height: 100%; object-fit: cover; object-position: center center;" src="{{ obrazek.Obrazek.url }}" alt="{{ obrazek.Popis }}" title="{{ obrazek.Popis }}">
                </a>
            </div>
        {% endfor %}
    </div>

    {% if data.Obrazek|length > data.Pocet_zobrazenych %}
        <button class="btn btn-primary mt-3" data-gallery-target="button" data-action="click->gallery#showMore">Zobrazit v√≠ce</button>
    {% endif %}
</div>
