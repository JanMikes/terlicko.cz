<div class="d-flex flex-wrap gap-4 mt-3 mb-5 align-items-stretch">
    {% for karta in data.Karty %}
        <div class="column-tipy-na-vylet align-items-center justify-content-center flex-wrap text-center position-relative">
            {% if karta.Stuzka %}
                <span class="card-ribbon rounded-3">{{ karta.Stuzka }}</span>
            {% endif %}

            {% if karta.Nadpis and karta.Umisteni_nadpisu != 'pod obrázkem' %}
                <h4 class="h5 mt-0 mb-3">{{ karta.Nadpis }}</h4>
            {% endif %}

            {% if karta.Obrazek %}
                <img class="img-fluid" src="{{ karta.Obrazek.url }}" alt="{{ karta.Nadpis|default('') }}">
            {% endif %}

            {% if karta.Ikonky %}
                <div class="card-icons mt-2" aria-hidden="true">
                    {% for ikonka in karta.Ikonky %}
                        {% if ikonka.Ikonka %}
                            <img src="{{ ikonka.Ikonka.url }}" alt="">
                        {% endif %}
                    {% endfor %}
                </div>
            {% endif %}

            {% if karta.Nadpis and karta.Umisteni_nadpisu == 'pod obrázkem' %}
                <h4 class="my-3 px-3">{{ karta.Nadpis }}</h4>
            {% endif %}

            {% if karta.Text %}
                <p class="mb-0 px-3 pb-3 small">
                    {{ karta.Text|nl2br }}
                </p>
            {% endif %}

            {% if karta.Tlacitko %}
                <p class="mb-0 px-3 pb-3">
                    <twig:Odkaz data="{{ karta.Tlacitko.Odkaz }}" class="custom-badge custon-badge-btn-full">{{ karta.Tlacitko.Text }}</twig:Odkaz>
                </p>
            {% endif %}
        </div>
    {% endfor %}
</div>

