<div class="row">
    {% for termin in data.Terminy %}
        <div class="col-md-6">
            <p>
                {% if termin.Termin %}
                    <time>{{ termin.Termin|date('d.m.Y H:i') }}</time><br>
                {% endif %}

                {% if termin.Nazev %}
                    {{ termin.Nazev }}<br>
                {% endif %}

                {% if termin.ZivyPrenos %}
                    {{ termin.ZivyPrenos }}<br>
                {% endif %}

                {% if termin.Zaznam %}
                    {{ termin.Zaznam }}
                {% endif %}
            </p>
        </div>
    {% endfor %}
</div>
