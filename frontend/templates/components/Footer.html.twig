<footer>
    <div class="footer-background py-5">
        <div class="container">
            {% if computed.footer %}
                <div class="row">
                    <div class="col-sm-6 border-1 border-sm-end pe-sm-4 pe-md-5">
                        <h2 class="h3 mb-3 fw-bold"><span class="text-secondary">Kontakt</span></h2>

                        {{ computed.footer.Kontakt|markdown_to_html|newlines }}

                        <h2 class="h3 fw-bold mb-3 mt-5"><span class="text-secondary">Úřední hodiny</span></h2>

                        {{ computed.footer.Uredni_hodiny|markdown_to_html|newlines }}
                    </div>

                    <div class="col-sm-6 border-1 border-sm-start ps-sm-4 ps-md-5">
                        <h2 class="h3 mb-3 fw-bold"><span class="text-secondary">Mohlo by vás zajímat</span></h2>

                        {% for banner in computed.footer.Bannery %}
                            <twig:Odkaz data="{{ banner.Odkaz }}">
                                <img class="mt-3 img-fluid" src="{{ banner.Obrazek.url }}" alt="" title="">
                            </twig:Odkaz>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="py-3 text-center bg-white footer-outer">
        {% if computed.footer.Odkazy %}
            <p>
                {% for odkaz in computed.footer.Odkazy %}
                    <twig:Odkaz data="{{ odkaz.Odkaz }}" class="d-inline-block mx-2">{{ odkaz.Text }}</twig:Odkaz>
                {% endfor %}
            </p>
        {% endif %}

        web &amp; design <a href="https://www.wantoo.cz" target="_blank" class="fw-bold">WANTOO design</a> 2025
    </div>
</footer>
