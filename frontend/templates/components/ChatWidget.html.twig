<style>
    /* Fix z-index layering for modal */
    #aiChatModal {
        z-index: 1055 !important;
    }
    #aiChatModal .modal-dialog {
        z-index: 1056 !important;
        pointer-events: auto !important;
    }
    #aiChatModal .modal-content {
        pointer-events: auto !important;
    }
    #aiChatModal .modal-backdrop {
        z-index: 1054 !important;
    }
    /* Ensure all interactive elements are clickable */
    #aiChatModal input,
    #aiChatModal button,
    #aiChatModal a,
    #aiChatModal .btn {
        pointer-events: auto !important;
        cursor: pointer !important;
    }
    /* Fix bg-primary utility class - use CSS variable */
    .chat-user-message {
        background-color: var(--bs-primary) !important;
        color: white !important;
    }
    /* Fix text colors for assistant messages */
    .chat-assistant-message {
        background-color: white !important;
        color: #212529 !important;
    }
    .message-content {
        color: #212529 !important;
    }
    #aiChatModal .bg-white {
        color: #212529 !important;
    }
    /* Markdown formatting styles - override global heading styles for chat */
    .message-content h1,
    .message-content h2,
    .message-content h3,
    .message-content h4,
    .message-content h5,
    .message-content h6 {
        font-size: 1rem !important;
        font-weight: 600 !important;
        margin: 0.75rem 0 0.5rem !important;
        padding: 0 !important;
        line-height: 1.4 !important;
        color: #212529 !important;
        border: none !important;
        background: none !important;
    }
    .message-content h1:first-child,
    .message-content h2:first-child,
    .message-content h3:first-child,
    .message-content h4:first-child,
    .message-content h5:first-child,
    .message-content h6:first-child {
        margin-top: 0 !important;
    }
    .message-content h2 {
        font-size: 1.05rem !important;
    }
    .message-content h3 {
        font-size: 0.95rem !important;
    }
    .message-content ul,
    .message-content ol {
        padding-left: 1.5rem;
        margin-bottom: 0.5rem;
    }
    .message-content li {
        margin-bottom: 0.25rem;
    }
    .message-content p {
        margin-bottom: 0.5rem;
    }
    .message-content p:last-child {
        margin-bottom: 0;
    }
    .message-content strong {
        font-weight: 600;
    }
    /* Inline citation styles */
    .citation-link {
        color: var(--bs-primary);
        text-decoration: none;
        font-size: 0.75rem;
    }
    .citation-link:hover {
        text-decoration: underline;
    }
    /* Text with citation link */
    .citation-text-link {
        color: var(--bs-primary);
        text-decoration: none;
        border-bottom: 1px dotted var(--bs-primary);
    }
    .citation-text-link:hover {
        text-decoration: none;
        border-bottom-style: solid;
    }
    .citation-text-link sup {
        font-size: 0.7rem;
        margin-left: 1px;
    }
</style>

{# AI Chatbot Widget #}
<div data-controller="chat">
    {# Floating Chat Button #}
    <button
        type="button"
        class="btn p-0 border-0 position-fixed end-0 bottom-0 m-4 shadow-lg rounded-circle"
        style="width: 70px; height: 70px; z-index: 1040; overflow: hidden;"
        data-action="click->chat#open"
        data-bs-toggle="modal"
        data-bs-target="#aiChatModal"
        title="AI Asistent Těrlicka"
    >
        <img src="{{ asset('images/chat-icon.png') }}" alt="AI Asistent" style="width: 100%; height: 100%; object-fit: cover;">
    </button>

    {# Chat Modal #}
    <div class="modal fade" id="aiChatModal" tabindex="-1" data-chat-target="modal">
        <div class="modal-dialog modal-dialog-scrollable modal-lg">
            <div class="modal-content">
                {# Modal Header #}
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-robot me-2" viewBox="0 0 16 16">
                            <path d="M6 12.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5M3 8.062C3 6.76 4.235 5.765 5.53 5.886a26.6 26.6 0 0 0 4.94 0C11.765 5.765 13 6.76 13 8.062v1.157a.93.93 0 0 1-.765.935c-.845.147-2.34.346-4.235.346s-3.39-.2-4.235-.346A.93.93 0 0 1 3 9.219zm4.542-.827a.25.25 0 0 0-.217.068l-.92.9a25 25 0 0 1-1.871-.183.25.25 0 0 0-.068.495c.55.076 1.232.149 2.02.193a.25.25 0 0 0 .189-.071l.754-.736.847 1.71a.25.25 0 0 0 .404.062l.932-.97a25 25 0 0 0 1.922-.188.25.25 0 0 0-.068-.495c-.538.074-1.207.145-1.98.189a.25.25 0 0 0-.166.076l-.754.785-.842-1.7a.25.25 0 0 0-.182-.135"/>
                            <path d="M8.5 1.866a1 1 0 1 0-1 0V3h-2A4.5 4.5 0 0 0 1 7.5V8a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1v1a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-1a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1v-.5A4.5 4.5 0 0 0 10.5 3h-2zM14 7.5V13a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V7.5A3.5 3.5 0 0 1 5.5 4h5A3.5 3.5 0 0 1 14 7.5"/>
                        </svg>
                        AI Asistent Těrlicka
                    </h5>
                    <button type="button" class="btn-close" data-action="click->chat#close" data-bs-dismiss="modal" aria-label="Zavřít"></button>
                </div>

                {# Modal Body - Messages #}
                <div class="modal-body p-0" style="height: 500px; overflow-y: auto; background-color: #f8f9fa;">
                    {# Welcome Message #}
                    <div class="p-4 text-center text-muted" data-chat-target="welcome">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" class="bi bi-chat-left-dots mb-3 opacity-50" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H4.414A2 2 0 0 0 3 11.586l-2 2V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12.793a.5.5 0 0 0 .854.353l2.853-2.853A1 1 0 0 1 4.414 12H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z"/>
                            <path d="M5 6a1 1 0 1 1-2 0 1 1 0 0 1 2 0m4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0m4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0"/>
                        </svg>
                        <p class="mb-0">Dobrý den! Jsem AI asistent města Těrlicko.</p>
                        <p class="small">Zeptejte se mě na cokoliv ohledně služeb města.</p>
                    </div>

                    {# Messages Container #}
                    <div class="p-3" data-chat-target="messages"></div>

                    {# Loading Indicator #}
                    <div class="px-3 pb-3 d-none" data-chat-target="loading">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-robot" viewBox="0 0 16 16">
                                        <path d="M6 12.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5M3 8.062C3 6.76 4.235 5.765 5.53 5.886a26.6 26.6 0 0 0 4.94 0C11.765 5.765 13 6.76 13 8.062v1.157a.93.93 0 0 1-.765.935c-.845.147-2.34.346-4.235.346s-3.39-.2-4.235-.346A.93.93 0 0 1 3 9.219zm4.542-.827a.25.25 0 0 0-.217.068l-.92.9a25 25 0 0 1-1.871-.183.25.25 0 0 0-.068.495c.55.076 1.232.149 2.02.193a.25.25 0 0 0 .189-.071l.754-.736.847 1.71a.25.25 0 0 0 .404.062l.932-.97a25 25 0 0 0 1.922-.188.25.25 0 0 0-.068-.495c-.538.074-1.207.145-1.98.189a.25.25 0 0 0-.166.076l-.754.785-.842-1.7a.25.25 0 0 0-.182-.135"/>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <div class="bg-white rounded-3 p-3 shadow-sm">
                                        <div class="spinner-grow spinner-grow-sm me-2" role="status"></div>
                                        <span class="text-muted">Přemýšlím...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Error Message #}
                    <div class="px-3 pb-3 d-none" data-chat-target="error">
                        <div class="alert alert-danger mb-0" role="alert">
                            <strong>Chyba:</strong> <span data-chat-target="errorMessage"></span>
                        </div>
                    </div>

                    {# Rate Limit Message #}
                    <div class="px-3 pb-3 d-none" data-chat-target="rateLimit">
                        <div class="alert alert-warning mb-0" role="alert">
                            <strong>Omezení:</strong> Dosáhli jste limitu zpráv. Zkuste to prosím za <span data-chat-target="rateLimitTime"></span>.
                        </div>
                    </div>

                    {# Off-topic Feedback Message #}
                    <div class="px-3 pb-3 d-none" data-chat-target="feedback">
                        <div class="alert alert-info small mb-0" role="alert">
                            Myslíte si, že je to chyba?
                            <a href="mailto:info@terlicko.cz?subject=AI%20Chat%20-%20Zpětná%20vazba">Dejte nám vědět</a>
                        </div>
                    </div>

                    {# Modal Footer - Input Form #}
                    <div class="modal-footer flex-column align-items-stretch p-3 bg-light">
                        <form data-action="submit->chat#sendMessage" data-chat-target="form">
                            <div class="input-group">
                                <input
                                    type="text"
                                    class="form-control"
                                    placeholder="Napište svou zprávu..."
                                    data-chat-target="input"
                                    required
                                    maxlength="500"
                                >
                                <button
                                    class="btn btn-primary"
                                    type="submit"
                                    data-chat-target="submitButton"
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-send-fill" viewBox="0 0 16 16">
                                        <path d="M15.964.686a.5.5 0 0 0-.65-.65L.767 5.855H.766l-.452.18a.5.5 0 0 0-.082.887l.41.26.001.002 4.995 3.178 3.178 4.995.002.002.26.41a.5.5 0 0 0 .886-.083zm-1.833 1.89L6.637 10.07l-.215-.338a.5.5 0 0 0-.154-.154l-.338-.215 7.494-7.494 1.178-.471z"/>
                                    </svg>
                                </button>
                            </div>
                            <div class="form-text mt-2">
                                <small class="text-muted">
                                    Terka čerpá informace z obsahu webu Terlicko.cz a postupně se učí. Nenašli jste, co hledáte? Dejte nám vědět.
                                </small>
                            </div>
                        </form>

                        <div class="mt-2">
                            <button
                                type="button"
                                class="btn btn-sm btn-outline-secondary"
                                data-action="click->chat#endConversation"
                            >
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-x-circle me-1" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                                </svg>
                                Ukončit konverzaci
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
