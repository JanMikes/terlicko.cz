<style>
    /* Modal z-index and pointer events */
    #aiChatModal {
        z-index: 1055 !important;
    }
    #aiChatModal .modal-dialog {
        z-index: 1056 !important;
        pointer-events: auto !important;
    }
    #aiChatModal .modal-content {
        pointer-events: auto !important;
        border-radius: 16px;
        overflow: hidden;
        border: none;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }
    #aiChatModal .modal-backdrop {
        z-index: 1054 !important;
    }
    #aiChatModal input,
    #aiChatModal button,
    #aiChatModal a,
    #aiChatModal .btn {
        pointer-events: auto !important;
        cursor: pointer !important;
    }

    /* Chat Modal Header */
    .chat-modal-header {
        background: #354169;
        padding: 20px 24px;
        position: relative;
        min-height: 100px;
    }
    .chat-modal-header .chat-title {
        color: #fff;
        font-size: 1.75rem;
        font-weight: 600;
        margin: 0;
    }
    .chat-modal-header .chat-close-btn {
        position: absolute;
        top: 16px;
        right: 16px;
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.6);
        font-size: 28px;
        line-height: 1;
        padding: 0;
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: color 0.2s;
    }
    .chat-modal-header .chat-close-btn:hover {
        color: #fff;
    }
    .chat-modal-header .chat-character {
        position: absolute;
        right: 60px;
        top: -10px;
        width: 130px;
        height: auto;
        pointer-events: none;
    }

    /* Chat Modal Body */
    .chat-modal-body {
        background: #fff;
        height: 450px;
        overflow-y: auto;
        padding: 20px;
    }

    /* Welcome message */
    .chat-welcome {
        text-align: center;
        padding: 40px 20px;
        color: #6b7c93;
    }
    .chat-welcome-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-bottom: 16px;
    }
    .chat-welcome p {
        margin: 0;
        font-size: 15px;
    }
    .chat-welcome .small {
        font-size: 13px;
        margin-top: 8px;
    }

    /* Message styles */
    .chat-message {
        display: flex;
        align-items: flex-start;
        margin-bottom: 16px;
    }
    .chat-message-assistant {
        flex-direction: row;
    }
    .chat-message-user {
        flex-direction: row-reverse;
    }

    /* Avatar */
    .chat-avatar {
        flex-shrink: 0;
        width: 48px;
        height: 48px;
        border-radius: 50%;
        overflow: hidden;
    }
    .chat-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .chat-avatar-user {
        background: #d1d5db;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Message bubbles */
    .chat-bubble {
        max-width: 80%;
        padding: 14px 18px;
        border-radius: 16px;
        font-size: 15px;
        line-height: 1.5;
    }
    .chat-bubble-assistant {
        background: #dbeafe;
        color: #1e293b;
        margin-left: 12px;
        border-bottom-left-radius: 4px;
    }
    .chat-bubble-user {
        background: #F2F2F2;
        color: #1e293b;
        margin-right: 12px;
        border-bottom-right-radius: 4px;
    }

    /* Message content markdown */
    .message-content {
        color: #1e293b !important;
    }
    .message-content h1,
    .message-content h2,
    .message-content h3,
    .message-content h4,
    .message-content h5,
    .message-content h6 {
        font-size: 1rem !important;
        font-weight: 600 !important;
        margin: 0.75rem 0 0.5rem !important;
        padding: 0 !important;
        line-height: 1.4 !important;
        color: #1e293b !important;
        border: none !important;
        background: none !important;
    }
    .message-content h1:first-child,
    .message-content h2:first-child,
    .message-content h3:first-child,
    .message-content h4:first-child,
    .message-content h5:first-child,
    .message-content h6:first-child {
        margin-top: 0 !important;
    }
    .message-content ul,
    .message-content ol {
        padding-left: 1.5rem;
        margin-bottom: 0.5rem;
    }
    .message-content li {
        margin-bottom: 0.25rem;
    }
    .message-content p {
        margin-bottom: 0.5rem;
    }
    .message-content p:last-child {
        margin-bottom: 0;
    }
    .message-content strong {
        font-weight: 600;
    }
    .message-content a {
        color: #3b5998;
        text-decoration: underline;
    }

    /* Citations */
    .chat-citations {
        margin-top: 12px;
        padding-top: 12px;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
        font-size: 13px;
        color: #6b7c93;
    }
    .chat-citations-label {
        font-weight: 500;
        margin-right: 8px;
    }
    .citation-badge {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        padding: 4px 10px;
        background: #f1f5f9;
        border-radius: 12px;
        margin-right: 8px;
        font-size: 12px;
        color: #475569;
    }
    .citation-link {
        color: #3b5998;
        text-decoration: none;
        font-size: 0.75rem;
    }
    .citation-link:hover {
        text-decoration: underline;
    }
    .citation-text-link {
        color: #3b5998;
        text-decoration: none;
        border-bottom: 1px dotted #3b5998;
    }
    .citation-text-link:hover {
        border-bottom-style: solid;
    }
    .citation-text-link sup {
        font-size: 0.7rem;
        margin-left: 1px;
    }

    /* Loading */
    .chat-loading {
        display: flex;
        align-items: flex-start;
        margin-bottom: 16px;
    }
    .chat-loading .chat-bubble {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    /* Chat Input Section - Light background */
    .chat-input-section {
        background: #f0f2f5;
        padding: 16px 20px;
        border-top: 1px solid #e5e7eb;
    }
    .chat-input-wrapper {
        display: flex;
        gap: 12px;
    }
    .chat-input {
        flex: 1;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 14px 18px;
        font-size: 15px;
        outline: none;
        background: #fff;
    }
    .chat-input:focus {
        border-color: #3b5998;
        box-shadow: 0 0 0 2px rgba(59, 89, 152, 0.15);
    }
    .chat-send-btn {
        background: #EAAA55;
        border: none;
        border-radius: 8px;
        padding: 14px 20px;
        color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background 0.2s;
    }
    .chat-send-btn:hover {
        background: #d99a45;
    }
    .chat-send-btn:disabled {
        background: #9ca3af;
        cursor: not-allowed;
    }

    /* End conversation button */
    .chat-end-btn {
        background: transparent;
        border: 1px solid #d1d5db;
        color: #6b7280;
        border-radius: 6px;
        padding: 6px 12px;
        font-size: 12px;
        margin-top: 12px;
        transition: all 0.2s;
    }
    .chat-end-btn:hover {
        border-color: #9ca3af;
        color: #374151;
        background: #fff;
    }

    /* Chat Modal Footer - Dark background */
    .chat-modal-footer {
        background: #354169;
        padding: 14px 20px;
    }
    .chat-footer-info {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 13px;
        color: rgba(255, 255, 255, 0.8);
    }
    .chat-footer-info .info-dot {
        width: 10px;
        height: 10px;
        background: #EAAA55;
        border-radius: 50%;
        flex-shrink: 0;
    }
    .chat-footer-info a {
        color: #EAAA55;
        text-decoration: none;
    }
    .chat-footer-info a:hover {
        text-decoration: underline;
    }

    /* Alerts */
    .chat-alert {
        padding: 12px 16px;
        border-radius: 8px;
        font-size: 14px;
        margin: 0 20px 16px;
    }
    .chat-alert-error {
        background: #fee2e2;
        color: #991b1b;
    }
    .chat-alert-warning {
        background: #fef3c7;
        color: #92400e;
    }
    .chat-alert-info {
        background: #dbeafe;
        color: #1e40af;
    }

    /* Responsive */
    @media (max-width: 576px) {
        .chat-modal-header .chat-character {
            width: 90px;
            right: 50px;
            top: 0;
        }
        .chat-modal-header .chat-title {
            font-size: 1.4rem;
        }
        .chat-modal-body {
            height: 350px;
        }
        .chat-bubble {
            max-width: 85%;
        }
    }
</style>

