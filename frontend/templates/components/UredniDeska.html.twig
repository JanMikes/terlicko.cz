<div class="row my-4">
    {% for uredni_deska_dokument in this.getItems(data.Pocet, data.Kategorie) %}
        {% if loop.index <= data.Pocet %}
            <article class="col-sm-6 col-md-4 my-3">
                <div class="d-flex">
                    <span class="article-icon me-3"></span>
                    <div>
                        <a href="{{ path('detail_uredni_desky', {'slug': uredni_deska_dokument.slug}) }}" class="text-decoration-none">
                            <time class="small text-primary-emphasis">
                                {% if uredni_deska_dokument.Datum_stazeni %}
                                    Od
                                {% endif %}
                                {{ uredni_deska_dokument.Datum_zverejneni|date('d.m.Y') }}
                                {% if uredni_deska_dokument.Datum_stazeni %}
                                    {{ uredni_deska_dokument.Datum_stazeni|date('d.m.Y') }}
                                {% endif %}
                            </time>

                            <h2 class="h6 mt-1 fw-bold">{{ uredni_deska_dokument.Nadpis }}</h2>
                        </a>
                    </div>
                </div>
            </article>
        {% endif %}
    {% endfor %}
</div>

