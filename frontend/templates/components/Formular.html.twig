<div class="my-4">
    <h2>{{ data.formular.Nazev_formulare }}</h2>

    <div class="row">
        {% for pole in data.formular.Pole %}
            <div class="col-md-4 mb-3">
                <label class="form-label">{{ pole.Nadpis_pole }}</label>
                <input class="form-control">
                {{ pole.Povinne }}
                {{ pole.Typ }}

                {% if pole.Typ in ['Select', 'Radio', 'Checkbox list'] %}
                    {% for moznost in pole.Moznosti %}
                        {{ moznost }}
                    {% endfor %}
                {% endif %}
            </div>
        {% endfor %}
    </div>

    <button type="submit" class="custom-badge">Odeslat</button>
</div>
