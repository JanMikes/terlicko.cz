<div {{ attributes }}>
    <div class="events-calendar">
        <div class="row">
            <div class="col-md-6">
                <div class="calendar-header">
                    <button
                        type="button"
                        class="calendar-nav-btn calendar-prev-btn"
                        {{ live_action('previousMonth') }}
                        aria-label="Previous month"
                    >
                        <i class="bi bi-chevron-left"></i>
                    </button>

                    {# Display full month name and year #}
                    {% set firstOfMonth = date(year ~ '-' ~ month ~ '-01') %}
                    {% set czechMonths = ['Leden','Únor','Březen','Duben','Květen','Červen','Červenec','Srpen','Září','Říjen','Listopad','Prosinec'] %}
                    {% set monthName = czechMonths[month - 1] %}

                    <span class="calendar-title">{{ monthName }} {{ year }}</span>

                    <button
                        type="button"
                        class="calendar-nav-btn calendar-next-btn"
                        {{ live_action('nextMonth') }}
                        aria-label="Next month"
                    >
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </div>

                <table class="calendar-table">
                    <thead>
                    <tr>
                        <th>Po</th>
                        <th>Út</th>
                        <th>St</th>
                        <th>Čt</th>
                        <th>Pá</th>
                        <th>So</th>
                        <th>Ne</th>
                    </tr>
                    </thead>
                    <tbody>
                    {# Build a flat days array with null placeholders #}
                    {% set weekdayOfFirst = firstOfMonth.format('N') %}
                    {% set days = [] %}
                    {% set today = date('now', 'Europe/Prague') %}
                    {% set isCurrentMonth = (year == today.format('Y')) and (month == today.format('n')) %}
                    {% set todayDay = today.format('j') %}

                    {% for i in 1..(weekdayOfFirst - 1) %}
                        {% set days = days|merge([null]) %}
                    {% endfor %}

                    {% set daysInMonth = firstOfMonth.format('t') %}

                    {% for day in 1..daysInMonth %}
                        {% set days = days|merge([day]) %}
                    {% endfor %}

                    {% set remainder = days|length % 7 %}

                    {% if remainder > 0 %}
                        {% for i in 1..(7 - remainder) %}
                            {% set days = days|merge([null]) %}
                        {% endfor %}
                    {% endif %}

                    {# Render each week as a row of 7 cells #}
                    {% for week in days|batch(7) %}
                        <tr>
                            {% for day in week %}
                                <td class="calendar-cell{% if day and selectedDay == day %} selected{% endif %}{% if day and isCurrentMonth and day == todayDay %} today{% endif %}">
                                    {% if day %}
                                        <button
                                            type="button"
                                            {{ live_action('changeDay', { 'day': day }) }}
                                        >
                                            <span class="calendar-day">{{ day }}</span>

                                            <div class="day-events">
                                                {% if computed.events[day] ?? [] %}
                                                    {% for daysCount in computed.events[day] ?? [] %}
                                                        <span class="day-event"></span>
                                                    {% endfor %}
                                                {% endif %}
                                            </div>
                                        </button>
                                    {% endif %}
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="col-md-6">
                <div class="calendar-events py-3 pe-3">
                    {% if selectedDay and computed.events[selectedDay] ?? [] is not empty %}
                        {% for event in computed.events[selectedDay] %}
                            {% set monthName = czechMonths[event.Datum.format('m') - 1] %}

                            <div class="calendar-event-item">
                                {% if event.Aktualita %}
                                <a href="{{ path('detail_aktuality', {'slug': event.Aktualita.slug}) }}" class="text-decoration-none">
                                    {% endif %}
                                    <div class="d-flex w-100 upcoming-event-item">
                                        <div class="upcoming-event-date">
                                            <span class="month-day">{{ event.Datum.format('j') }}</span>
                                            <span class="month-name">{{ monthName }}</span>
                                        </div>
                                        <div class="upcoming-event-detail flex-grow-1">
                                            <span class="upcoming-event-title">{{ event.Nazev }}</span>
                                            {% if event.Poradatel %}
                                                <br>
                                                Pořadatel: <span class="text-secondary fw-bold">{{ event.Poradatel }}</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    {% if event.Aktualita %}
                                </a>
                                {% endif %}
                            </div>
                        {% endfor %}
                    {% else %}
                        {% if selectedDay %}
                            <div class="no-events text-center pt-4">
                                <p class="mb-2 fs-6">V tento den:</p>
                                <h4>{{ selectedDay }}.{{ month }}.{{ year }}</h4>
                                <h3>Se nekoná žádná akce</h3>
                            </div>
                        {% else %}
                            <div class="no-events text-center pt-4">
                                <h3>Pro zobrazení akcí, zvolte den.</h3>
                            </div>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
